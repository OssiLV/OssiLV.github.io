---

<html>
  <head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" href={logo.src} type="image/svg+xml" />
    <title>OssiLV</title>
  </head>

  <body class="">
	<!-- Header -->
	<header class="sticky top-0 z-50 w-full h-6 md:h-16 md:border-b border-border/40 bg-background/95 md:backdrop-blur supports-[backdrop-filter]:bg-background/60 dark:border-border">
		<div class=" max-w-7xl mx-auto px-6 py-4 flex-col justify-center">
			<!-- Navigation -->
			<nav class="hidden md:flex justify-center space-x-8">
				{navItems.map(item => <a href={item.url} class="hover:text-slate-900/80 transition-all duration-150 ">{item.title}</a>)}
				<a href={resumeAddress} download="CV_VO_HOANG_ANH_TRUONG.pdf">
					<Button size="sm" variant="outline" className="w-full transition-all duration-150">Download CV</Button>
				</a>
			</nav>
			<div class="md:hidden flex justify-end">
				<a href={resumeAddress} download="CV_VO_HOANG_ANH_TRUONG.pdf">
					<Button size="sm" variant="default" className="w-full transition-all duration-150">Download CV</Button>
				</a>
			</div>
		</div>
		
	</header>

	

	<div class="flex-col min-h-screen p-8 md:p-24 ">
		<!-- Avatar -->
		<div class="flex h-48 items-center gap-8">
			<div>
