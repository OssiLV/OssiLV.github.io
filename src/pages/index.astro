---
import '@/styles/globals.css'
import logo from '../assets/logo.svg'
import avt from "../assets/Avatar.jpg"

import { Button } from '@/components/ui/button';
import { Separator } from "@/components/ui/separator"
import { Badge } from "@/components/ui/badge"
import { Accordion } from "@/components/Accordion";


import githubLogo from "../assets/brand/github.svg"
import linkedinLogo from "../assets/brand/linkedin.svg"
import csharpLogo from "../assets/brand/csharp.svg"
import javascriptLogo from "../assets/brand/javascript.svg"
import typescriptLogo from "../assets/brand/typescript.svg"
import pythonLogo from "../assets/brand/python.svg"
import dotnetLogo from "../assets/brand/dotnet.svg"
import nestjsLogo from "../assets/brand/nestjs.svg"
import reactjsLogo from "../assets/brand/reactjs.svg"
import nextjsLogo from "../assets/brand/nextjs.svg"
import mongodbLogo from "../assets/brand/mongo.svg"
import sqlserverLogo from "../assets/brand/sql.svg"
import mysqlLogo from "../assets/brand/mysql.svg"
import postgresqlLogo from "../assets/brand/postgresql.svg"
import dockerLogo from "../assets/brand/docker.svg"
import gitLogo from "../assets/brand/git.svg"
import notionLogo from "../assets/brand/notion.svg"
import astroLogo from "../assets/brand/astro.svg"


const accordionData = [
	{
		title: "AIG",
		description: "AIG (ASIA Ingredients GROUP) is the leading company in Vietnam in the field of supplying and manufacturing food ingredients. I work as a Application Specialist and a Microsoft Power Platform developer here, responsible for building and maintaining internal applications.",
		list: [
			{
				description: "Analyze user requirements and translate them into actionable development plans."
			},
			{
				description: "Identify and implement optimal solutions to meet development objectives."
			},
			{
				description: "Provide user training to ensure effective adoption and utilization of applications."
			},
			{
				description: "Deliver ongoing support, manage operations, and ensure the seamless maintenance of applications."
			}
		]
	},
	{
		title: "Is it styled?",
		description:
			"Yes. It comes with default styles that matches the other components' aesthetic.",
	},
	{
		title: "Is it animated?",
		description:
			"Yes. It's animated by default, but you can disable it if you prefer.",
	},
];
---

<html>
  <head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" href={logo.src} type="image/svg+xml" />
    <title>OssiLV</title>
	<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5194031821478739"
     crossorigin="anonymous"></script>
  </head>

  <body class="flex justify-center">
	<div class="flex-col min-h-screen p-8 md:p-24 ">
		<!-- Avatar -->
		<div class="flex h-48 items-center gap-8">
			<div>
				<small class="text-sm font-medium leading-none">Hello, I'm Truong,</small>
				<h2 class="scroll-m-20 border-b pb-2 text-3xl font-semibold tracking-tight first:mt-0">
					Full stack Developer
				</h2>
				<div class="flex-col md:grid md:grid-cols-2 md:grid-flow-col md:justify-start">
					<a href="https://github.com/OssiLV" class="flex">
						<img src={githubLogo.src} width="28" height="28">
						<Button variant="link" className='p-0'>Github</Button>
					</a>
					<a href="https://www.linkedin.com/in/ossilv/" class="flex">
						<img src={linkedinLogo.src} width="26" height="26">
						<Button variant="link" className='p-0'>Github</Button>
					</a>					
				</div>
				<div>
					<Button variant="link" className='p-0'>
						<a href="#contact">Contact Me</a>
					</Button>
				</div>
			</div>
			<img class="w-36 h-36 md:w-44 md:h-44 rounded-3xl" src={avt.src} alt="@OssiLV">
			<!-- <AvatarComponent client:load src={avt.src} alt="" fallbackText="OLV"/> -->
		</div>

		<!-- About -->
		<div id="about" class="mt-16">
			<h3 class="scroll-m-20 text-2xl font-semibold tracking-tight">
				About
			</h3>
			<Separator/>
			<p class="leading-7 [&:not(:first-child)]:mt-6">
				Enthusiastic Backend Developer with 1 year of experience specializing in Microsoft Power Platform (Power Apps, Power Automate, SharePoint) and API integration, including ERP AX 2012. Skilled in streamlining data flow and enhancing system interoperability, with a goal to grow into a full-stack developer. Actively seeking opportunities to expand skills and deliver innovative solutions in a collaborative environment.
			  </p>
		</div>

		<!-- Skills -->
		<div id="skills" class="mt-16">
			<h3 class="scroll-m-20 text-2xl font-semibold tracking-tight">
				Skills
			</h3>
			<Separator/>
			<ul class="my-6 ml-6 list-disc [&>li]:mt-2">
				<!-- Programing languages -->
				<li>
					<p>
						Programming Languages:
					</p>
					<Badge variant="outline" className='gap-2'>
						<img src={csharpLogo.src} width="28" height="28">
						C Sharp
					</Badge>
					<Badge variant="outline" className='gap-2'>
						<img src={javascriptLogo.src} width="28" height="28">
						JavaScript
					</Badge>
					<Badge variant="outline" className='gap-2'>
						<img src={typescriptLogo.src} width="28" height="28">
						TypeScript
					</Badge>
					<Badge variant="outline" className='gap-2'>
						<img src={pythonLogo.src} width="28" height="28">
						Python
					</Badge>

				</li>
				
				<!-- Frameworks & Libraries -->
				<li>
					<p>
						Frameworks & Libraries:
					</p>
					<Badge variant="outline" className='gap-2'>
						<img src={dotnetLogo.src} width="28" height="28">
						Dot Net
					</Badge>
					<Badge variant="outline" className='gap-2'>
						<img src={nestjsLogo.src} width="28" height="28">
						NestJS
					</Badge>
					<Badge variant="outline" className='gap-2'>
						<img src={nextjsLogo.src} width="28" height="28">
						NextJS
					</Badge>
					<Badge variant="outline" className='gap-2'>
						<img src={reactjsLogo.src} width="28" height="28">
						ReactJS
					</Badge>
					<Badge variant="outline" className='gap-2'>
						<img src={astroLogo.src} width="28" height="28">
						Astro
					</Badge>
				</li>

				<!-- Databases -->
				<li>
					<p>
						Databases:
					</p>
					<Badge variant="outline" className='gap-2'>
						<img src={mongodbLogo.src} width="28" height="28">
						MongoDB
					</Badge>
					<Badge variant="outline" className='gap-2'>
						<img src={sqlserverLogo.src} width="28" height="28">
						SQL Server
					</Badge>
					<Badge variant="outline" className='gap-2'>
						<img src={mysqlLogo.src} width="28" height="28">
						My SQL
					</Badge>
					<Badge variant="outline" className='gap-2'>
						<img src={postgresqlLogo.src} width="28" height="28">
						PostgreSQL
					</Badge>
					
				</li>

				<!-- Tools & Technologies -->
				<li>
					<p>
						Tools & Technologies:
					</p>
					<Badge variant="outline" className='gap-2'>
						<img src={dockerLogo.src} width="28" height="28">
						Docker
					</Badge>
					<Badge variant="outline" className='gap-2'>
						<img src={gitLogo.src} width="28" height="28">
						Git
					</Badge>
					<Badge variant="outline" className='gap-2'>
						<img src={githubLogo.src} width="28" height="28">
						Github
					</Badge>
					<Badge variant="outline" className='gap-2'>
						<img src="https://cdn.holistics.io/logo-dbdiagram-notext.ico" width="28" height="28">
						dbdiagram.io
					</Badge>
					<Badge variant="outline" className='gap-2'>
						<img src={notionLogo.src} width="28" height="28">
						Notion
					</Badge>
				</li>

				<!-- Tools & Technologies -->
				<!-- <li>
					<p>
						Interests:
					</p>
					<Badge variant="outline" className='gap-2'>
						<img src={dotnetLogo.src} width="28" height="28">
						Dot Net
					</Badge>
				</li> -->
			  </ul>
		</div>

		<!-- Experience -->
		<div id="exp" class="mt-16">
			<h3 class="scroll-m-20 text-2xl font-semibold tracking-tight">
				Experience
			</h3>
			<Separator/>
		
			<Accordion data={accordionData} client:idle />
	
			  
			
		</div>

		<!-- Projects -->
		<div class="mt-16">
			<h3 class="scroll-m-20 text-2xl font-semibold tracking-tight">
				Projects
			</h3>
			<Separator/>
			
		</div>

		<!-- Contact -->
		<div id="contact" class="mt-16">
			<h3 class="scroll-m-20 text-2xl font-semibold tracking-tight">
				Contact
			</h3>
			<Separator/>
			<p class="mt-6 list-disc [&>li]:mt-2 text-md text-gray-600 mb-12">I would love to hear from you! Please fill out the form below to get in touch.</p>

			<form action="#" method="POST" class="space-y-6">
				<!-- Name Field -->
				<div>
					<label for="name" class="block text-sm font-medium text-gray-700">Full Name</label>
					<input type="text" id="name" name="name" required placeholder="Your Full Name" class="w-full px-4 py-2 mt-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
				</div>

				<!-- Email Field -->
				<div>
					<label for="email" class="block text-sm font-medium text-gray-700">Email Address</label>
					<input type="email" id="email" name="email" required placeholder="Your Email Address" class="w-full px-4 py-2 mt-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
				</div>

				<!-- Message Field -->
				<div>
					<label for="message" class="block text-sm font-medium text-gray-700">Message</label>
					<textarea id="message" name="message" rows="4" required placeholder="Your Message" class="w-full px-4 py-2 mt-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"></textarea>
				</div>

				<!-- Submit Button -->
				<Button type="submit" >
					Send Message
				</Button>
			</form>
		</div>
	</div>
  </body>

</html>
